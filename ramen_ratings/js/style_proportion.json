{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "description": "A simple radial chart showing the distribution of packaging style among countries",
  "title": {
    "text": "Distribution of Ramen Packaging Style",
    "fontSize": 20
  },
  "height": 600,
  "width": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/MingHey/FIT3179/main/ramen_ratings/data/ramen_ratings.csv"
  },
  "params": [
     { 
      "name": "Country_selection",
      "bind": { 
        "input": "select", 
        "options": [ null, 
                  "Japan",
                  "United States of America",
                  "South Korea",
                  "Taiwan",
                  "Thailand",
                  "China",
                  "Malaysia",
                  "Hong Kong",
                  "Indonesia",
                  "Singapore",
                  "Vietnam",
                  "United Kingdom" ], 
        "labels":[ "Show All", "Japan",
                  "USA",
                  "South Korea",
                  "Taiwan",
                  "Thailand",
                  "China",
                  "Malaysia",
                  "Hong Kong",
                  "Indonesia",
                  "Singapore",
                  "Vietnam",
                  "UK" ], 
        "name": "Country Selection: " 
        } 
      } 
    ],
  "transform": [
    {
    "filter": {
        "field": "Style",
        "oneOf": ["Cup", "Pack", "Bowl", "Tray"]
      }
    },
    {"filter": "Country_selection == null || datum.Country == Country_selection"}
  ],
  "layer": [{
    "mark": {"type": "arc", "innerRadius": 70, "stroke": "#ffff"}
  },
  {
    "mark": {"type": "text", "radiusOffset": 90, "fontSize": 18},
    "encoding": {
      "text": {"aggregate": "count", "field": "Style", "type": "quantitative"}
    }
  }],
  "encoding": {
    "theta": {
        "aggregate": "count",
        "field": "Style",
        "type": "quantitative",
        "stack": true
    },
    "radius": {
        "aggregate": "count", 
        "field": "Style", 
        "type": "quantitative", 
        "scale": {
          "type": "symlog",
          "zero": true, 
          "rangeMin": 100, 
          "rangeMax": 200}
    },
    "color": {
        "field": "Style",
        "type": "nominal",
        "legend": {"labelFontSize": 20, "titleFontSize": 15, "padding": 40}
    },
    "tooltip": [
      {"field": "Style", "type": "nominal"}, 
      {"aggregate": "count", "field": "Style", "type": "quantitative", "title": "Count of Packaging Style"}
        ]
  },
  "view": {"stroke": null}
}
