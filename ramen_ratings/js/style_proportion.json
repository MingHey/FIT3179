{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "description": "A simple radial chart showing the distribution of packaging style among countries",
  "title": {
    "text": "Average Rating of Brands with More Than 30 Reviews",
    "fontSize": 25,
    "fontWeight": "bold",
    "font": "Trebuchet MS, Arial, sans-serif",
    "align": "center"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/MingHey/FIT3179/main/ramen_ratings/data/ramen_ratings.csv"
  },
  "params": [
     { 
      "name": "Country_selection",
      "bind": { 
        "input": "select", 
        "options": [ null, 
                  "Japan",
                  "United States of America",
                  "South Korea",
                  "Taiwan",
                  "Thailand",
                  "China",
                  "Malaysia",
                  "Hong Kong",
                  "Indonesia",
                  "Singapore",
                  "Vietnam",
                  "United Kingdom" ], 
        "labels":[ "Show All", "Japan",
                  "USA",
                  "South Korea",
                  "Taiwan",
                  "Thailand",
                  "China",
                  "Malaysia",
                  "Hong Kong",
                  "Indonesia",
                  "Singapore",
                  "Vietnam",
                  "UK" ], 
        "name": "Country Selection: " 
        } 
      } 
    ],
  "transform": [
    {
    "filter": {
        "field": "Style",
        "oneOf": ["Cup", "Pack", "Bowl", "Tray"]
      }
    },
    {"filter": "Country_selection == null || datum.Country == Country_selection"},
    {"aggregate": [{
       "op": "count",
       "field": "Style",
       "as": "StyleCount"
      }],
      "groupby": ["Style"]
      },
    {"joinaggregate": [
      {
        "op": "sum",
        "field": "StyleCount",
        "as": "Total"
        }
    ]},
    {"calculate": "datum.StyleCount/datum.Total * 100", "as": "Percent"}
  ],
  "layer": [{
    "mark": {"type": "arc", "innerRadius": 55, "stroke": "#ffff"}
  },
  {
    "mark": {"type": "text", "radiusOffset": 88, "fontSize": 18, "yOffset": -17, "font": "Museo Sans"},
    "encoding": {
      "text": {"field": "Style"}
    }
  }],
  "encoding": {
    "theta": {
        "field": "StyleCount",
        "type": "quantitative",
        "stack": true
    },
    "radius": {
        "field": "StyleCount", 
        "type": "quantitative", 
        "scale": {
          "type": "sqrt",
          "zero": true, 
          "rangeMin": 100, 
          "rangeMax": 200}
    },
    "color": {
        "field": "Style",
        "type": "nominal",
        "legend": null,
        "scale": {
          "domain": ["Cup", "Tray", "Bowl", "Pack"],
          "range": ["#003F5C", "#7A5195", "#EF5675", "#FFA600"]
        }
    },
    "tooltip": [
      {"field": "Style", "type": "nominal"}, 
      {"field": "StyleCount", "type": "quantitative", "title": "Count of Packaging Style"},
      {"field": "Percent", "type": "quantitative", "format": ".2f", "title": "Percentage (%)"}
        ]
  },
  "config": {
    "view": {"stroke": null},
    "background": "ivory"
  }
}
