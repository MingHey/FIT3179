{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": {
    "text": "Average Rating of Brands with More Than 30 Reviews",
    "fontSize": 25,
    "fontWeight": "bold",
    "font": "Trebuchet MS, Arial, sans-serif"
  },
  "height": 300,
  "width": 900,
  "data": {"url": "https://raw.githubusercontent.com/MingHey/FIT3179/main/ramen_ratings/data/brand_ratings.csv"},
  "transform": [
    {
      "aggregate": [{"op": "mean", "field": "Stars", "as": "Rating"}],
      "groupby": ["Style", "Brand"]
    }
  ],
  "encoding": {
    "y": {"field": "Style", "type": "nominal", "axis": {"labelFontSize": 15, "labelPadding": 10, "titleFontSize": 15}},
    "x": {"field": "Brand", "type": "nominal", "axis":{"labelAngle": 0, "labelFontSize": 12, "labelPadding": 5, "titleFontSize": 15}}
  },
  "layer": [
    {
      "mark": "rect",
      "encoding": {
        "color": {
          "field": "Rating",
          "type": "quantitative",
          "title": "Ratings",
          "scale": {"scheme": "goldgreen"},
          "legend": {"direction": "horizontal", "gradientLength": 200, "orient": "bottom"}
        }
      }
    },
    {
      "mark": "text",
      "encoding": {
        "text": {"field": "Rating", "type": "quantitative", "format": ".3f"},
        "color": {
          "condition": {"test": "datum['Rating'] < 3.5", "value": "black"},
          "value": "white"
        }
      }
    }
  ],
  "config": {
    "axis": {"grid": true, "tickBand": "extent"},
    "background": "ivory"
  }
}
